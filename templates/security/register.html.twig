{% extends 'base.html.twig'%}
{% form_theme view 'bootstrap_4_layout.html.twig' %}

{% block body%}
    <h1>Form d'inscription :</h1>
    {{ form_start(view) }}
    {{ form_row(view.email,{'label': 'Votre email','attr':{'placeholder': 'exemple@domaine.com'}}) }}
    {{ form_row(view.username,{'label': 'Pseudo','attr':{'placeholder': 'Votre pseudo'}}) }}
    {{ form_row(view.password) }}
    {{ form_row(view.nom,{'label': 'Votre nom','attr':{'placeholder': 'Votre nom'}}) }}
    {{ form_row(view.prenom,{'label': 'Votre prenom','attr':{'placeholder': 'Votre prenom'}}) }}
    {{ form_row(view.age) }}
    {{ form_row(view.tel,{'label': 'Votre numéro de téléphone','attr':{'placeholder': 'Votre numéro de téléphone'}}) }}
    {{ form_row(view.ville,{'label': 'Vous venez de quelle ville','attr':{'placeholder': 'Votre ville'}}) }}
    <div class="g-recaptcha" data-sitekey="6LeugSUaAAAAADij0MMHUpZy-pJQyCVm1YRqURn0"></div>
    <br/>
    <button type="submit" id="submit" name="submit" class="btn btn-success">S'enregistrer</button>
    {{ form_end(view) }}
    <script type="text/javascript"></script>
{% endblock %}